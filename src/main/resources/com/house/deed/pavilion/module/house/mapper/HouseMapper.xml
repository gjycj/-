<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.house.deed.pavilion.module.house.mapper.HouseMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.house.deed.pavilion.module.house.entity.House">
        <id column="id" property="id" />
        <result column="tenant_id" property="tenantId" />
        <result column="building_id" property="buildingId" />
        <result column="house_no" property="houseNo" />
        <result column="house_type" property="houseType" />
        <result column="area" property="area" />
        <result column="inside_area" property="insideArea" />
        <result column="floor" property="floor" />
        <result column="total_floor" property="totalFloor" />
        <result column="orientation" property="orientation" />
        <result column="decoration" property="decoration" />
        <result column="property_right" property="propertyRight" />
        <result column="property_right_cert_no" property="propertyRightCertNo" />
        <result column="property_right_years" property="propertyRightYears" />
        <result column="mortgage_status" property="mortgageStatus" />
        <result column="mortgage_details" property="mortgageDetails" />
        <result column="price" property="price" />
        <result column="transaction_type" property="transactionType" />
        <result column="status" property="status" />
        <result column="description" property="description" />
        <result column="create_agent_id" property="createAgentId" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, tenant_id, building_id, house_no, house_type, area, inside_area, floor, total_floor, orientation, decoration, property_right, property_right_cert_no, property_right_years, mortgage_status, mortgage_details, price, transaction_type, status, description, create_agent_id, create_time, update_time
    </sql>

    <!-- 校验楼栋内房号是否重复 -->
    <select id="checkHouseNoUnique" resultType="java.lang.Integer">
        SELECT COUNT(1) FROM house WHERE building_id = #{buildingId} AND house_no = #{houseNo} AND tenant_id = #{tenantId}
    </select>

</mapper>
